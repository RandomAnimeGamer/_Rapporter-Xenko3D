shader SpritePicking : SpriteBase
{
    // -------------------------------------
    // streams
    // -------------------------------------
    stage stream float4 Color : COLOR;

    // method computing color
    stage override float4 Shading()
    {
        base.Shading(); // discard pixel if needed.

        return streams.Color;
    }
};
